<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre Parking :"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/parknom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom : "
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/parkadresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse : " />

    <TextView
        android:id="@+id/parktelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone : " />

    <TextView
        android:id="@+id/parknbplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de places disponibles : "
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/tvHeure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ArrivÃ©e dans"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bReserver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resever" />

</LinearLayout>